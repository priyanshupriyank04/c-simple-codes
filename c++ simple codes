1. print hello world
#include <iostream>;
using namespace std;
int main()
{
    cout<<"Hello World";
    return 0;
}
2. sum of 2 given numbers
#include <iostream>;
using namespace std;
int main()
{
    int a,b,c;
    cout<<"Please enter two numbers ";
    cin>>a>>b;
    c=a+b;
    cout<<"The sum of both numbers is "<<c;
    return 0;
}
3. enter your name 
#include <iostream>
using namespace std;
int main()
{
    string name;
    cout<<"May I know your name? ";
    getline(cin,name);
    cout<<"Welcome Mr."<<name;
    return 0;
}
